<tr>
  <td>
    <% if friend.picture? %>
      <span class="avatar" style="background-image:url(<%= friend.picture_url %>)"></span>
    <% end %>
  </td>

  <td><%= link_to friend.name, watched_path(friend) %></td>

  <td>
    <%= link_to_user(friend) %>
  </td> 

  <td>
    <%= twitter_icon if current_user.following_on_twitter?(friend) %>
    <%= facebook_icon if current_user.following_on_facebook?(friend) %>
  </td>

  <td><%= link_to_compare(current_user, friend) %></td>

  <td>
    <%= link_to 'unfollow', unfollow_path(friend.id), :method => :delete,
      :confirm => "Are you sure you want to unfollow #{screen_name friend}?" %>
  </td>
</tr>
